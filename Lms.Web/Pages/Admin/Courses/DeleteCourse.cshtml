@page "{id}"
@model Lms.Web.Pages.Admin.Courses.DeleteCourseModel
@{
    ViewData["Title"] = "حذف دوره";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                حذف دوره
             
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
              
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="alert alert-danger rounded text-danger">
                آیا میخواهید این دوره را حذف نمایید ؟
            </div>
            <form method="post">
                <input type="hidden" name="CourseId" value="@ViewData["CourseId"]"/>

                <p> نام دوره : @(Model.InformationCourseViewModel.Title)</p>
                <p> کد دوره: @Model.InformationCourseViewModel.Code</p>
                <p>زمان دوره : @Model.InformationCourseViewModel.CourseTime</p>
                <p>درباره دروه: @Html.Raw(Model.InformationCourseViewModel.AboutCourse)</p>
                <p><img class="img-circle" height="100" src="/CoursesPic/@Model.InformationCourseViewModel.CourseImage"/></p>
                <input type="submit" class="btn btn-danger btn-round" value="حذف"/>
                <a asp-page="Index" class="btn btn-info btn-round">انصراف</a>
            </form>
        </div>
    </div>
</div>