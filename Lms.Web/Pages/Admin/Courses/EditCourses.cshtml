@page "{id}"
@model Lms.Web.Pages.Admin.Courses.EditCoursesModel
@{
    ViewData["Title"] = "ویرایش دوره";
}
<form enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Course.Id" />
    <input type="hidden" asp-for="Course.CreateDate" />
    <input type="hidden" asp-for="Course.CourseImage" />
    <input type="hidden" asp-for="Course.DemoFileName" />
    <div class="col-md-8 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_title">
                <h2>
                    ویرایش دوره

                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            نام دوره :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="Course.Title" required="" class="form-control  " placeholder="لطفا نام دوره را وارد کنید" type="text">
                            <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Course.Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            گروه آموزشی :
                        </label>
                        <div class="col-md-8">
                            <select class="form-control" asp-for="Course.GroupId" asp-items="@ViewData["Groups"] as SelectList"></select>
                            <span asp-validation-for="Course.Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            زیر گروه آموزشی :
                        </label>
                        <div class="col-md-8">
                            <select class="form-control" asp-for="Course.SubGroup" asp-items="@ViewData["SubGroups"] as SelectList"></select>
                            <span asp-validation-for="Course.SubGroup" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            مربی دوره :
                        </label>
                        <div class="col-md-8">
                            <select class="form-control" asp-for="Course.TeacherId" asp-items="@ViewData["Teachers"] as SelectList"></select>
                            <span asp-validation-for="Course.TeacherId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            قیمت دوره :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="Course.CoursePrice" required="" class="form-control  " placeholder="لطفا قیمت دوره را وارد کنید" type="number">
                            <span class="fa fa-code form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Course.CoursePrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            توضیحات دوره:
                        </label>
                        <div class="col-md-8">
                            <textarea asp-for="Course.AboutCourse" required="required" class="form-control" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-validation-threshold="10"></textarea>
                            <span class="fa fa-expand form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Course.AboutCourse" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            فایل دمو دوره :
                        </label>
                        <div class="col-md-8">
                            <input name="demoUp" type="file">
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            کلمات کلیدی :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="Course.Tags" required="" class="form-control  " placeholder="کلمات را با - جدا کنید" type="text">
                            <span class="fa fa-code form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Course.Tags" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="item  form-group">

                        <div class="col-md-12 col-sm-12 col-xs-12  ">
                            <input asp-for="Course.IsActive" type="checkbox" class="js-switch" data-switchery="true" style="display: none;">
                            &nbsp;
                            <label>فعال / غیر فعال</label>
                        </div>
                    </div>

                    <hr class="col-md-12" />
                    <div class="item form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">
                            <input type="submit" class="btn btn-success" value="ثبت" />
                            <a asp-page="Index" class="btn btn-warning">انصراف</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-4">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    تصویر دوره

                </h2>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <img id="imgAvatar" src="/CoursesPic/@Model.Course.CourseImage" class="img-thumbnail" />
                <input name="imgCourseUp" id="imgCourseUp" type="file" />
            </div>

            <div class="item form-group">
                <label class="control-label col-md-7  ">
                    سطح دوره :
                </label>
                <div class="col-md-12">
                    <select class="form-control" asp-for="Course.LevelId" asp-items="@ViewData["Levels"] as SelectList"></select>
                    <span asp-validation-for="Course.LevelId" class="text-danger"></span>
                </div>
            </div>

            <div class="item form-group">
                <label class="control-label col-md-7  ">
                    وضعیت دوره :
                </label>
                <div class="col-md-12">
                    <select class="form-control" asp-for="Course.StatusId" asp-items="@ViewData["Statues"] as SelectList"></select>
                    <span asp-validation-for="Course.StatusId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script>

        $("#Course_GroupId").change(function () {
            $("#Course_SubGroup").empty();
            $.getJSON("/home/GetSubGroups/" + $("#Course_GroupId :selected").val(),
                function (data) {

                    $.each(data,
                        function () {
                            $("#Course_SubGroup").append('<option value=' + this.value + '>' + this.text + '</option>');

                        });
                });
        });

        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgCourseUp").change(function () {
            readURL(this);
        });
    </script>

    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('Course_AboutCourse', {
            customConfig: '/js/Config.js'
        });

    </script>
}