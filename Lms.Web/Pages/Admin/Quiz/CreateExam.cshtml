@page "{id}"
@model Lms.Web.Pages.Admin.Quiz.CreateExamModel
@{
    ViewData["Title"] = "ایجاد آزمون جدید";
}

<form enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Exam.CourseId" />
    <input type="hidden" asp-for="Exam.TeacherId" />
    <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    ایجاد آزمون جدید
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            عنوان آزمون :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="Exam.ExamTitle" required="" class="form-control  " placeholder="لطفا نام آزمون را وارد کنید" type="text">
                            <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Exam.ExamTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">

                        <label class="control-label col-md-7  ">
                            تاریخ شروع آزمون :
                        </label>
                        <div class="col-md-8">
                            <div id="">
                                <input id="stDate" name="stDate">
                            </div>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            تاریخ پایان آزمون :
                        </label>
                        <div class="col-md-8">
                            <input id="endDate" name="endDate">
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            مدت زمان آزمون(ساعت) :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="Exam.ExamTime" required="" class="form-control  " placeholder="لطفا زمان آزمون به ساعت را وارد کنید" type="number">
                            <span class="fa fa-clock-o form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Exam.ExamTime" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="col-md-12" />
                    <div class="item form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">
                            <input type="submit" class="btn btn-success" value="مرحله بعدی" />
                            @*<a asp-page="Index" class="btn btn-warning">انصراف</a>*@
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/AdminContent/kendoui/js/jquery.min.js"></script>
    <script src="~/AdminContent/kendoui/js/kendo.all.min.js"></script>

    @*<link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="/js/kendo.all.min.js"></script>*@

    <script>
        // create DatePicker from input HTML element
        $("#stDate").kendoDateTimePicker(
            {
                format: "yyyy/MM/dd hh:mm:ss"
            });
        $("#endDate").kendoDateTimePicker(
            {
                format: "yyyy/MM/dd hh:mm:ss"
            });

    </script>

}
